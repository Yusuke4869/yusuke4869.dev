---
interface Props {
  name: string;
  slug: string;
  description: string;
}

const { name: productName, slug, description } = Astro.props;
---

<a
  href={`/products/${slug}`}
  class="my-2 flex w-fit min-w-full flex-col justify-start rounded px-3 py-2 hover:scale-105 hover:duration-300 lg:min-w-[75%]"
>
  <span class="text-lg font-semibold">{productName}</span>
  <span class="text-sm">{description}</span>
</a>
